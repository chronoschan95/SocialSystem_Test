/Documents/SophomoreYear/JAVA/ExperimentX/CSys/V1/frontend/src/views/Home.vue"],"sourcesContent":["<template>\n  <div class=\"home\">\n    <Header />\n    \n    <main class=\"main-content\">\n      <div class=\"layout-container\">\n        <!-- 左侧边栏 -->\n        <aside class=\"sidebar left-sidebar glass-effect\">\n          <nav class=\"main-nav\">\n            <router-link to=\"/\" class=\"nav-item active\">\n              <i class=\"icon-home\"></i>\n              <span>首页</span>\n            </router-link>\n            <router-link to=\"/messages\" class=\"nav-item\">\n              <i class=\"icon-message\"></i>\n              <span>私信</span>\n            </router-link>\n            <router-link to=\"/notifications\" class=\"nav-item\">\n              <i class=\"icon-notification\"></i>\n              <span>通知</span>\n            </router-link>\n            <router-link to=\"/friends\" class=\"nav-item\">\n              <i class=\"icon-friends\"></i>\n              <span>好友</span>\n            </router-link>\n          </nav>\n        </aside>\n        \n        <!-- 主内容区 -->\n        <div class=\"content-area\">\n          <!-- 发布框 -->\n          <div class=\"post-editor glass-effect\" v-if=\"isAuthenticated\">\n            <textarea \n              placeholder=\"分享你的想法...\"\n              v-model=\"newPost\"\n              @focus=\"showPostTools = true\"\n            ></textarea>\n            <div class=\"post-tools\" v-show=\"showPostTools\">\n              <div class=\"tool-buttons\">\n                <button class=\"tool-btn\">\n                  <i class=\"icon-image\"></i>\n                  图片\n                </button>\n                <button class=\"tool-btn\">\n                  <i class=\"icon-file\"></i>\n                  文件\n                </button>\n              </div>\n              <RoundedButton @click=\"submitPost\">发布</RoundedButton>\n            </div>\n          </div>\n          \n          <!-- 内容流 -->\n          <div class=\"content-feed\">\n            <ContentCard \n              v-for=\"post in posts\" \n              :key=\"post.id\" \n              :post=\"post\"\n              @click=\"handlePostClick\"\n            />\n          </div>\n        </div>\n        \n        <!-- 右侧边栏 -->\n        <aside class=\"sidebar right-sidebar glass-effect\">\n          <!-- 用户信息卡片 -->\n          <div class=\"user-card\" v-if=\"isAuthenticated\">\n            <img :src=\"userAvatar\" alt=\"avatar\" class=\"user-avatar\" />\n            <div class=\"user-info\">\n              <h3>{{ username }}</h3>\n              <p>{{ userBio }}</p>\n            </div>\n          </div>\n          \n          <!-- 热门话题 -->\n          <div class=\"trending-topics\">\n            <h3>热门话题</h3>\n            <ul class=\"topic-list\">\n              <li v-for=\"topic in trendingTopics\" :key=\"topic.id\">\n                <a href=\"#\" class=\"topic-item\">\n                  <span class=\"topic-name\"># {{ topic.name }}</span>\n                  <span class=\"topic-count\">{{ topic.count }}条讨论</span>\n                </a>\n              </li>\n            </ul>\n          </div>\n        </aside>\n      </div>\n    </main>\n  </div>\n</template>\n\n<script>\nimport { ref, computed } from 'vue'\nimport { useStore } from 'vuex'\nimport Header from '../components/common/Header.vue'\nimport ContentCard from '../components/home/ContentCard.vue'\nimport RoundedButton from '../components/common/RoundedButton.vue'\n\nexport default {\n  name: 'Home',\n  components: {\n    Header,\n    ContentCard,\n    RoundedButton\n  },\n  \n  setup() {\n    const store = useStore()\n    const newPost = ref('')\n    const showPostTools = ref(false)\n    \n    const isAuthenticated = computed(() => store.state.isAuthenticated)\n    \n    return {\n      isAuthenticated,\n      newPost,\n      showPostTools,\n      posts: [\n        {\n          id: 1,\n          title: \"今日分享\",\n          content: \"分享一个有趣的故事...\",\n          image: \"/images/sample1.jpg\",\n          author: {\n            name: \"张三\",\n            avatar: \"/images/avatar1.jpg\"\n          },\n          likes: 42,\n          comments: 15,\n          shares: 5\n        },\n        // 更多测试数据...\n      ],\n      trendingTopics: [\n        { id: 1, name: \"校园生活\", count: 1234 },\n        { id: 2, name: \"学习交流\", count: 890 },\n        { id: 3, name: \"社团活动\", count: 567 },\n        // 更多话题...\n      ]\n    }\n  },\n  \n  methods: {\n    handlePostClick(post) {\n      if (!this.isAuthenticated) {\n        this.$router.push('/login')\n      } else {\n        // 处理帖子点击\n      }\n    },\n    \n    submitPost() {\n      if (this.newPost.trim()) {\n        // 发布新帖子的逻辑\n        this.newPost = ''\n        this.showPostTools = false\n      }\n    }\n  }\n}\n</script>\n\n<style scoped lang=\"scss\">\n.home {\n  min-height: 100vh;\n  padding-top: 80px;\n  \n  .layout-container {\n    max-width: 1200px;\n    margin: 0 auto;\n    padding: 20px;\n    display: grid;\n    grid-template-columns: 250px 1fr 300px;\n    gap: 20px;\n  }\n  \n  .sidebar {\n    padding: 20px;\n    \n    &.left-sidebar {\n      .main-nav {\n        display: flex;\n        flex-direction: column;\n        gap: 10px;\n        \n        .nav-item {\n          display: flex;\n          align-items: center;\n          gap: 10px;\n          padding: 12px;\n          border-radius: var(--border-radius-md);\n          color: var(--text-color);\n          text-decoration: none;\n          \n          &:hover, &.active {\n            background: rgba(var(--primary-color-rgb), 0.1);\n            color: var(--primary-color);\n          }\n        }\n      }\n    }\n    \n    &.right-sidebar {\n      .user-card {\n        padding: 20px;\n        margin-bottom: 20px;\n        border-bottom: 1px solid rgba(255, 255, 255, 0.1);\n        \n        .user-avatar {\n          width: 60px;\n          height: 60px;\n          border-radius: 50%;\n          margin-bottom: 10px;\n        }\n        \n        .user-info {\n          h3 {\n            margin-bottom: 5px;\n          }\n          \n          p {\n            font-size: 14px;\n            opacity: 0.8;\n          }\n        }\n      }\n      \n      .trending-topics {\n        h3 {\n          margin-bottom: 15px;\n        }\n        \n        .topic-list {\n          list-style: none;\n          \n          .topic-item {\n            display: flex;\n            justify-content: space-between;\n            padding: 10px 0;\n            color: var(--text-color);\n            text-decoration: none;\n            \n            &:hover {\n              color: var(--primary-color);\n            }\n            \n            .topic-count {\n              font-size: 12px;\n              opacity: 0.6;\n            }\n          }\n        }\n      }\n    }\n  }\n  \n  .content-area {\n    .post-editor {\n      margin-bottom: 20px;\n      padding: 20px;\n      \n      textarea {\n        width: 100%;\n        min-height: 100px;\n        padding: 10px;\n        border: none;\n        background: none;\n        resize: none;\n        color: var(--text-color);\n        \n        &::placeholder {\n          color: rgba(255, 255, 255, 0.5);\n        }\n      }\n      \n      .post-tools {\n        display: flex;\n        justify-content: space-between;\n        align-items: center;\n        padding-top: 10px;\n        border-top: 1px solid rgba(255, 255, 255, 0.1);\n        \n        .tool-buttons {\n          display: flex;\n          gap: 10px;\n          \n          .tool-btn {\n            padding: 8px;\n            background: none;\n            border: none;\n            color: var(--text-color);\n            cursor: pointer;\n            \n            &:hover {\n              color: var(--primary-color);\n            }\n          }\n        }\n      }\n    }\n    \n    .content-feed {\n      display: flex;\n      flex-direction: column;\n      gap: 20px;\n    }\n  }\n}\n</style> "],"mappings":"AA6FA,SAASA,GAAG,E