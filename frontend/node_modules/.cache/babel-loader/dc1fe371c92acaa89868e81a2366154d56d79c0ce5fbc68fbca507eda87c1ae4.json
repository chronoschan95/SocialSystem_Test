lass=\"action-btn\" @click=\"showComments(post)\">\n                  <Icon name=\"comment\" />\n                  <span>{{ post.comments || 0 }}</span>\n                </button>\n                <button class=\"action-btn\" @click=\"sharePost(post)\">\n                  <Icon name=\"share\" />\n                  <span>分享</span>\n                </button>\n              </div>\n            </article>\n          </div>\n        </div>\n\n        <!-- 右侧边栏 -->\n        <aside class=\"sidebar right-sidebar glass-effect\">\n          <div class=\"trending-topics\">\n            <h2>热门话题</h2>\n            <div class=\"topic-list\">\n              <router-link \n                v-for=\"topic in trendingTopics\" \n                :key=\"topic.id\"\n                :to=\"`/topic/${topic.id}`\"\n                class=\"topic-item\"\n              >\n                <h3># {{ topic.name }}</h3>\n                <span>{{ topic.posts }}条讨论</span>\n              </router-link>\n            </div>\n          </div>\n        </aside>\n      </div>\n    </main>\n  </div>\n</template>\n\n<script>\nimport { ref, onMounted } from 'vue'\nimport Icon from '../components/common/Icon.vue'\n\nexport default {\n  name: 'Home',\n  components: { Icon },\n  \n  setup() {\n    const newPost = ref('')\n    const posts = ref([])\n    const trendingTopics = ref([\n      { id: 1, name: '校园生活', posts: 1234 },\n      { id: 2, name: '学习交流', posts: 890 },\n      { id: 3, name: '社团活动', posts: 567 }\n    ])\n    \n    const userAvatar = ref('/images/default-avatar.jpg')\n    const username = ref('当前用户')\n    const isDarkMode = ref(false)\n    \n    const autoGrow = (e) => {\n      e.target.style.height = '0px'\n      e.target.style.height = e.target.scrollHeight + 'px'\n    }\n    \n    const publishPost = () => {\n      // TODO: 实现发布逻辑\n      console.log('发布:', newPost.value)\n      newPost.value = ''\n    }\n    \n    const formatTime = (time) => {\n      // TODO: 实现时间格式化\n      return new Date(time).t